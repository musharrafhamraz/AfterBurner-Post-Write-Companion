# ============================================
# Afterburner Post-Write Companion â€” .env
# ============================================

# --- LLM Provider ---
AFTERBURNER_LLM_PROVIDER=gemini          # "gemini" | "groq"
AFTERBURNER_GEMINI_API_KEY=your-gemini-api-key
AFTERBURNER_GROQ_API_KEY=your-groq-api-key
AFTERBURNER_LLM_MODEL=gemini-2.0-flash   # or "llama-3.3-70b-versatile" for Groq

# --- GitHub ---
AFTERBURNER_GITHUB_TOKEN=ghp_xxxxxxxxxxxx
AFTERBURNER_GITHUB_REPO=owner/repo
AFTERBURNER_AUTO_PR=true
# AFTERBURNER_PR_REVIEWERS=user1,user2

# --- Security ---
AFTERBURNER_ENABLE_SEMGREP=true
AFTERBURNER_ENABLE_BANDIT=true
AFTERBURNER_SECURITY_BLOCK_ON=critical   # "critical" | "warning"

# --- Testing ---
AFTERBURNER_MAX_TEST_DEBUG_ITERATIONS=4
AFTERBURNER_ENABLE_PLAYWRIGHT=false
AFTERBURNER_TEST_TIMEOUT_SECONDS=300

# --- Deployment ---
AFTERBURNER_DEPLOY_TARGET=               # "vercel" | "docker"  (leave blank to skip)
AFTERBURNER_SKIP_DEPLOY=false
AFTERBURNER_VERCEL_TOKEN=your-vercel-token

# --- Monitoring ---
# AFTERBURNER_SENTRY_DSN=https://xxx@sentry.io/123
# AFTERBURNER_ENABLE_PROMETHEUS=false

# --- Workflow ---
AFTERBURNER_MAX_REFLECTION_RETRIES=3
AFTERBURNER_VERBOSE=false
